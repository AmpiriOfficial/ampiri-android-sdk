<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ampiri.demo"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"/>

    <uses-sdk
        tools:overrideLibrary="com.mopub.volley, com.facebook.ads"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".StandardBannerActivity"
            android:label="@string/ad_banner_standard"/>
        <activity
            android:name=".BigBannerActivity"
            android:label="@string/ad_banner_big"/>
        <activity
            android:name=".InterstitialActivity"
            android:label="@string/ad_interstitial"/>
        <activity
            android:name=".VideoActivity"
            android:label="@string/ad_video"/>
        <activity
            android:name=".NativeActivity"
            android:label="@string/ad_native"/>
        <activity
            android:name=".VideoNativeActivity"
            android:label="@string/ad_native_video"/>
        <activity
            android:name=".FeedCardInfeedActivity"
            android:label="@string/ad_native_infeed_feed_card"/>
        <activity
            android:name=".StoryCardInfeedActivity"
            android:label="@string/ad_native_infeed_story_card"/>
        <activity
            android:name=".VideoCardInfeedActivity"
            android:label="@string/ad_native_infeed_video_card"/>
    </application>

</manifest>
